<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <div class='sale'>
    <% if active_sale? %>
    <p class='alert alert-info'>
    There's an active <%= sale_name %> sale going on! 
    <br>
    <strong>Everything is <%= sale_percent %> %OFF</strong>
    </p>
    <% end %>
    </div>

    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
